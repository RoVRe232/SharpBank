
@{
    ViewData["Title"] = "SignupConfirmation";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<div class="row">
    <div class="col-sm-2">
        <a asp-controller="Login" asp-action="Index"><img src="~/content/images/Logo.png" /></a>
    </div>
</div>

<div class="row">
    <div class="container col-sm-6">
        <h2 class="text-center">Confirmation email sent!</h2>
        <p>Please check your inbox to see if you received the email sent to confirm your account.</p>
        <p><b>Note:</b> An unconfirmed account will not be able to use any of the functionalities provided by the application.</p>
        <br />
        <p>Did not receive an email? <a asp-controller="Signup" asp-action="ResenedConfirmation"><u>Resend confirmation mail.</u></a> </p>
        <strong><p>After confirming your account, you can <a asp-controller="Login" asp-action="Index"></a>sign in</p></strong>
    </div>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - SharpBank - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
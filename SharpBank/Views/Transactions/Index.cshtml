
@{
    ViewData["Title"] = "Transactions overview";
    var transactionIndex = 0;
    var transactions = ViewBag.AllTransactions;
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/commons.css" type="text/css">
<link rel="stylesheet" href="~/css/transactions.css" type="text/css">

<div class="row">
    <div class="col-sm-2">
        <a asp-controller="Home" asp-action="Index"><img class="logo-img" src="~/content/images/Logo.png" /></a>
    </div>
    <div class="col-sm-10 text-center">
        <h1 class="text-center main-title">Transactions Overview</h1>
    </div>
</div>

<partial name="_SubMenu" />

<hr />
<h2>Newest transactions</h2>
<div class="table-responsive-md">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>Sender IBAN</th>
                <th>Receiver IBAN</th>
                <th>Receiver Full Name</th>
                <th>Transaction id</th>
                <th>Description</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in transactions)
            {
                <tr>
                    <th>@transactionIndex @{transactionIndex++;}</th>
                    <th>@item.SenderIBAN</th>
                    <th>@item.ReceiverIBAN</th>
                    <th>@item.ReceiverFullName</th>
                    <th>@item.TransactionId</th>
                    <th>@item.Description</th>
                    <th>@item.Amount @item.Currency</th>
                </tr>
            }
        </tbody>
    </table>
</div>
<ul class="pagination">
    <li class="page-item"><a class="page-link text-dark" href="#">Previous</a></li>
    <li class="page-item"><a class="page-link text-dark" href="#">1</a></li>
    <li class="page-item"><a class="page-link text-dark" href="#">2</a></li>
    <li class="page-item"><a class="page-link text-dark" href="#">3</a></li>
    <li class="page-item"><a class="page-link text-dark" href="#">Next</a></li>
</ul>

<br />
<hr />
<br />

<div class="jumbotron transactions-card-jumbo" >
    <h1>The world is moving, so why shouldn't you?</h1>
    <p>Link any of your cards and start making transactions, the sharp way.</p>
    <botton class="btn btn-light">Add a new card</botton>
</div>

<script src='~/lib/chartjs/dist/Chart.bundle.js'></script>
<script src="~/js/home.js" type="text/javascript"></script>
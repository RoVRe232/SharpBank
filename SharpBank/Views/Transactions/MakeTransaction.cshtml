
@{
    ViewData["Title"] = "Make Transaction";
    var accounts = ViewBag.BankAccounts;
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/commons.css" type="text/css">

<div class="row">
    <div class="col-sm-2">
        <a asp-controller="Home" asp-action="Index"><img class="logo-img" src="~/content/images/Logo.png" /></a>
    </div>
    <div class="col-sm-10 text-center">
        <h1 class="text-center main-title">New transaction</h1>
    </div>
</div>

<div class="row">
    <nav class="navbar navbar-expand-sm bg-light justify-content-center col-sm-12">
        <ul class="navbar-nav">
            <li class="nav-item center-nav-item text-center">
                <a class="card-link selected-card" href="#">
                    <i class="far fa-money-bill-alt nav-menu-icon"></i><p>Make Transaction</p>
                </a>
            </li>
            <li class="nav-item center-nav-item text-center">
                <a class="card-link text-dark" href="#"><i class="fas fa-receipt nav-menu-icon"></i><p>Pay bill</p></a>
            </li>
            <li class="nav-item center-nav-item text-center">
                <a class="card-link text-dark" href="#"><i class="far fa-credit-card nav-menu-icon"></i><p>Cards</p></a>
            </li>
            <li class="nav-item center-nav-item text-center">
                <a class="card-link text-dark" href="#"><i class="far fa-question-circle text-center nav-menu-icon"></i><p>Help</p></a>
            </li>
        </ul>
    </nav>
</div>

<hr />

<div class="row justify-content-center" style="padding-bottom:50px">
    <br />
    <h3 class="text-center" style="padding:30px;">Please enter the transaction details below</h3>
    <br />
    <form method="post" enctype="multipart/form-data" asp-controller="Transactions" asp-action="AddNewTransaction" class="col-sm-6">
        <div class="input-group-prepend">
            <div class="input-group-prepend">
                <label class="input-group-text" for="selectSenderIban">Sender Account</label>
            </div>
            <select class="custom-select" id="selectSenderIban" name="senderIban">
                <option selected>Choose...</option>
                @foreach (var bankAccount in accounts)
                {
                    <option value="@bankAccount.IBAN">@bankAccount.IBAN</option>
                }
            </select>
        </div>

        <label for="receiver-id">Receiver</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">IBAN</span>
            </div>
            <input type="text" name="receiverIban" class="form-control" id="receiver-id" aria-describedby="basic-addon3">
        </div>

        <label for="receiver-name">Receiver's full name (E.g. Johnatan Andrew-Smith)</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Full name</span>
            </div>
            <input type="text" name="receiverFullName" class="form-control" id="receiver-full-name" aria-describedby="basic-addon3">
        </div>

        <label for="transaction-description">Transaction description</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Description</span>
            </div>
            <textarea class="form-control" name="description" aria-label="Description" id="transaction-description"></textarea>
        </div>

        <label for="transaction-amount">Transaction amount</label>
        <div class="row">
            <div class="input-group col-sm-8">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input name="amount" type="text" class="form-control" aria-label="Amount">
                <div class="input-group-prepend">
                    <select class="custom-select" id="selectCurrency" name="currency">
                        <option selected>Currency...</option>
                        <option value="RON">RON</option>
                        <option value="EUR">EUR</option>
                        <option value="USD">USD</option>
                    </select>
                </div>

                <div class="col-sm-1"></div>
                <button type="submit" class="btn btn-primary col-sm-4 ml-auto mr-auto"><i class="fas fa-paper-plane"></i>Submit</button>
            </div>
        </div>
    </form>
</div>
<script src='~/lib/chartjs/dist/Chart.bundle.js'></script>
<script src="~/js/home.js" type="text/javascript"></script>
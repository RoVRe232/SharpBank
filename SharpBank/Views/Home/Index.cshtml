@{
    ViewData["Title"] = "Home Page";
    var BankAccounts = ViewBag.BankAccounts;
    var BankAccountIndex = 1;
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/home.css" type="text/css">

<div class="row">
    <div class="col-sm-2">
        <a asp-controller="Home" asp-action="Index"><img class="logo-img" src="~/content/images/Logo.png" /></a>
    </div>
    <div class="col-sm-10 text-center">
        <h1 class="text-center main-title">Welcome, User!</h1>
    </div>
</div>

<partial name="_SubMenu" />

<hr />
<h2><b>Your most used accounts</b></h2>
<div class="table-responsive-md">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>No</th>
                <th>Iban</th>
                <th>Cards</th>
                <th>Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var BankAccount in BankAccounts)
            {
                <tr>
                    <th>@BankAccountIndex @{BankAccountIndex++;}</th>
                    <th>@BankAccount.IBAN</th>
                    <th>
                        Visa, 0234 1544 **** **** <br />
                        MasterCard, 0434 6544 **** **** <br />
                    </th>
                    <th>@BankAccount.Balance @BankAccount.Currency</th>
                    <th>
                        <div>
                            <a class="action-button"><i class="far fa-money-bill-alt action-button-icon"></i></a>
                        </div>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container d-flex justify-content-center">
    <canvas id="pieChart" style="max-width: 500px;"></canvas>
</div>

<hr />

